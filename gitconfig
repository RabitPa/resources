[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto
	ui = true
[color "status"]
    added = green
    changed = blue
    untracked = magenta
    deleted = red
[alias]
	st = status
    pu = pull --rebase
    ps = push
    br = branch
	d = difftool
	c = checkout
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
