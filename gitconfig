[user]
	name  = Yide
	email = yide@ainemo.com
[push]
    # 'git push' should only do the current branch, not all
	default = current
[branch]
    # always setup 'git pull' to rebase instead of merge
    autosetuprebase = always
[core]
	editor = vim
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[difftool]
	prompt = false

[color]
	status      = auto
	branch      = auto
	interactive = auto
	diff        = auto
	ui          = true
[color "diff"]
	plain      = normal
	meta       = yellow bold
	frag       = magenta bold
	old        = red bold
	new        = green bold
	commit     = yellow
	whitespace = normal red
[color "branch"]
	header    = cyan
	current = green
	local   = normal
	remote  = red
	plain   = normal
[color "status"]
	header    = cyan
	added     = red
	updated   = green
	changed   = red
	untracked = yellow
	nobranch  = red
[color "grep"]
	match = magenta bold
	plain = cyan
[color "interactive"]
	prompt = normal
	header = normal
	help   = normal
	error  = normal

[alias]
	st = status
    pu = pull --rebase
    ps = push
    br = branch
	d  = difftool
	c  = checkout
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
